{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "${workspaceFolder}/*.cpp",
                "-g",
                "${workspaceFolder}/../CSVcat/CSVParser/*.cpp",
                "-g",
                "${workspaceFolder}/../CSVcat/TablePrinter/*.cpp",
                "-g",
                "${workspaceFolder}/../CSVcat/CSVTableFasade/*.cpp",
                "-g",
                "${workspaceFolder}/StudentProcessor/*.cpp",
                "-o",
                "${fileDirname}/csvstud"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}